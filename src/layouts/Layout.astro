---
import TerminalLayout from '@/layouts/TerminalLayout.astro'

interface Props {
  isWide?: boolean
  title?: string
  description?: string
  image?: string
  canonicalUrl?: URL | string
}

const {
  title,
  description,
  image,
  canonicalUrl,
} = Astro.props as Props
---

<TerminalLayout title={title} description={description} image={image} canonicalUrl={canonicalUrl}>
  <slot name="head" slot="head" />
  <slot />
</TerminalLayout>
