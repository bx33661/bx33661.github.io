---
import { SITE, SEO_KEYWORDS } from '@/consts'
import Favicons from './Favicons.astro'
import Analytics from './Analytics.astro'
import StructuredData from './StructuredData.astro'
import { ENABLE_ANALYTICS, POSTHOG_HOST } from '@/config/env'
import {
  DARK_THEME_NAMES,
  THEME_CHANGE_EVENT,
  THEME_DARK_PREFERENCE_KEY,
  THEME_LEGACY_MAP,
  THEME_NAMES,
  THEME_RUNTIME_COLORS,
  THEME_STORAGE_KEY,
} from '@/config/theme'

interface Props {
  title?: string
  description?: string
  image?: string
  canonicalUrl?: URL | string
}

const { title, description, image, canonicalUrl } = Astro.props
const posthogConnect = ENABLE_ANALYTICS ? (POSTHOG_HOST || 'https://app.posthog.com') : null
const hasNamedHeadSlot = Astro.slots.has('head')
const hasDefaultHeadSlot = Astro.slots.has('default')
const hasCustomHead = hasNamedHeadSlot || hasDefaultHeadSlot
const ogLocale = SITE.locale.replace('-', '_')
const defaultImage = new URL(image || '/ogImage.png', Astro.site).toString()
const defaultCanonical = canonicalUrl || Astro.url
const themeRuntimeConfig = {
  storageKey: THEME_STORAGE_KEY,
  darkPreferenceKey: THEME_DARK_PREFERENCE_KEY,
  eventName: THEME_CHANGE_EVENT,
  supportedThemes: THEME_NAMES,
  legacyThemeMap: THEME_LEGACY_MAP,
  darkThemes: DARK_THEME_NAMES,
  colors: THEME_RUNTIME_COLORS,
}
---

<head>
  <!-- Slot 内容优先（包括 title、meta 等 SEO 标签） -->
  {hasNamedHeadSlot ? <slot name="head" /> : <slot />}
  
  <!-- 结构化数据 (JSON-LD) -->
  <StructuredData />
  
  <!-- 分析工具（统一入口，受开关控制） -->
  <Analytics />

  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes"
  />
  <meta name="generator" content={Astro.generator} />
  <script is:inline define:vars={{ themeRuntimeConfig }}>
    (() => {
      if (window.__BX_THEME__) {
        return
      }

      const STORAGE_KEY = themeRuntimeConfig.storageKey
      const DARK_PREFERENCE_KEY = themeRuntimeConfig.darkPreferenceKey
      const EVENT_NAME = themeRuntimeConfig.eventName
      const SUPPORTED_THEMES = new Set(themeRuntimeConfig.supportedThemes)
      const LEGACY_THEME_MAP = themeRuntimeConfig.legacyThemeMap
      const DARK_CLASS_THEMES = new Set(themeRuntimeConfig.darkThemes)
      const THEME_COLORS = themeRuntimeConfig.colors

      const root = document.documentElement
      const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)')

      const sanitizeTheme = (theme) => {
        if (typeof theme !== 'string') return null
        if (SUPPORTED_THEMES.has(theme)) return theme
        return LEGACY_THEME_MAP[theme] || null
      }

      const readStoredTheme = () => {
        try {
          return sanitizeTheme(localStorage.getItem(STORAGE_KEY))
        } catch {
          return null
        }
      }

      const writeStoredTheme = (theme) => {
        try {
          localStorage.setItem(STORAGE_KEY, theme)
        } catch {
          // ignore
        }
      }

      const readDarkPreference = () => {
        try {
          const value = localStorage.getItem(DARK_PREFERENCE_KEY)
          if (!value || !DARK_CLASS_THEMES.has(value)) return null
          return value
        } catch {
          return null
        }
      }

      const writeDarkPreference = (theme) => {
        if (!DARK_CLASS_THEMES.has(theme)) return
        try {
          localStorage.setItem(DARK_PREFERENCE_KEY, theme)
        } catch {
          // ignore
        }
      }

      const clearStoredTheme = () => {
        try {
          localStorage.removeItem(STORAGE_KEY)
        } catch {
          // ignore
        }
      }

      const getSystemTheme = () => (mediaQuery.matches ? 'midnight' : 'light')
      const getPreferredDarkTheme = () => readDarkPreference() || 'midnight'
      const resolveDaisyTheme = (theme) => (theme === 'midnight' ? 'dark' : theme)
      const isDarkTheme = (theme) => DARK_CLASS_THEMES.has(theme)

      const syncThemeColorMeta = (theme) => {
        const color = THEME_COLORS[theme] || THEME_COLORS.light
        const runtimeMeta = document.querySelector(
          'meta[name="theme-color"][data-runtime-theme-color]'
        )
        runtimeMeta?.setAttribute('content', color)
      }

      const dispatchThemeChange = (theme) => {
        window.dispatchEvent(
          new CustomEvent(EVENT_NAME, {
            detail: {
              theme,
              daisyTheme: resolveDaisyTheme(theme),
              isDark: isDarkTheme(theme)
            }
          })
        )
      }

      const applyTheme = (inputTheme, { persist = true, emit = true } = {}) => {
        const theme = sanitizeTheme(inputTheme) || getSystemTheme()
        const daisyTheme = resolveDaisyTheme(theme)
        const darkTheme = isDarkTheme(theme)

        root.dataset.colorMode = theme
        root.dataset.theme = daisyTheme
        root.classList.toggle('dark', darkTheme)
        root.style.colorScheme = darkTheme ? 'dark' : 'light'
        root.style.backgroundColor = THEME_COLORS[theme] || THEME_COLORS.light
        syncThemeColorMeta(theme)

        if (persist) {
          writeStoredTheme(theme)
          if (darkTheme) {
            writeDarkPreference(theme)
          }
        } else {
          clearStoredTheme()
        }

        if (emit) {
          dispatchThemeChange(theme)
        }

        return theme
      }

      const getCurrentTheme = () => {
        const dataTheme = root.dataset.theme === 'dark' ? 'midnight' : root.dataset.theme
        return (
          sanitizeTheme(root.dataset.colorMode) ||
          sanitizeTheme(dataTheme) ||
          readStoredTheme() ||
          (root.classList.contains('dark') ? 'midnight' : 'light')
        )
      }

      window.__BX_THEME__ = {
        get: () => getCurrentTheme(),
        set: (theme) => applyTheme(theme),
        toggle: () => {
          const current = getCurrentTheme()
          return applyTheme(isDarkTheme(current) ? 'light' : getPreferredDarkTheme())
        },
        resetToSystem: () => {
          applyTheme(getSystemTheme(), { persist: false })
        }
      }

      const storedTheme = readStoredTheme()
      applyTheme(storedTheme || getSystemTheme(), { persist: Boolean(storedTheme), emit: false })

      const handleSystemThemeChange = () => {
        if (!readStoredTheme()) {
          applyTheme(getSystemTheme(), { persist: false })
        }
      }

      if (typeof mediaQuery.addEventListener === 'function') {
        mediaQuery.addEventListener('change', handleSystemThemeChange)
      } else {
        const legacyAddListener = Reflect.get(mediaQuery, 'addListener')
        if (typeof legacyAddListener === 'function') {
          legacyAddListener.call(mediaQuery, handleSystemThemeChange)
        }
      }
    })()
  </script>
  {!hasCustomHead && (
    <>
      <meta name="robots" content="index, follow" />
      <meta name="googlebot" content="index, follow" />
      <meta name="google" content="notranslate" />
      <meta name="revisit-after" content="1 days" />

      <!-- Title & Description & Keywords -->
      <title>{title || SITE.title}</title>
      <meta name="description" content={description || SITE.description.replace(/\n/g, ' ')} />
      <meta name="keywords" content={SEO_KEYWORDS.join(', ')} />

      <!-- Open Graph -->
      <meta property="og:title" content={title || SITE.title} />
      <meta property="og:description" content={description || SITE.description.replace(/\n/g, ' ')} />
      <meta property="og:url" content={defaultCanonical} />
      <meta property="og:site_name" content={SITE.title} />
      <meta property="og:locale" content={ogLocale} />
      <meta property="og:image" content={defaultImage} />
      <meta property="og:type" content="website" />

      <!-- Canonical URL -->
      <link rel="canonical" href={defaultCanonical} />

      <!-- Twitter Card -->
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content={title || SITE.title} />
      <meta name="twitter:description" content={description || SITE.description.replace(/\n/g, ' ')} />
      <meta name="twitter:image" content={defaultImage} />
    </>
  )}

  <!-- Core Web Vitals 优化 -->
  <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
  <link rel="preconnect" href="https://gstatic.loli.net" crossorigin />
  <link rel="preconnect" href="https://www.google-analytics.com" crossorigin />
  <link rel="preconnect" href="https://analytics.ahrefs.com" crossorigin />
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
  
  <!-- Font Preload - Non-blocking -->
  <link 
    rel="preload"
    href="https://gstatic.loli.net/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuLyfAZ9hjp-Ek-_EeA.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <!-- Fonts loaded via CSS with font-display: swap -->
  
  <!-- DNS 预解析 - 减少连接延迟 -->
  <link rel="dns-prefetch" href="//res.cloudinary.com" />
  <link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
  <link rel="dns-prefetch" href="//www.googletagmanager.com" />

  <!-- PWA支持 -->
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="apple-mobile-web-app-title" content="BX" />
  <meta
    name="format-detection"
    content="telephone=no,date=no,address=no,email=no,url=no"
  />

  <!-- 主题颜色配置 -->
  <meta
    name="theme-color"
    content={THEME_RUNTIME_COLORS.midnight}
    media="(prefers-color-scheme: dark)"
  />
  <meta
    name="theme-color"
    content={THEME_RUNTIME_COLORS.light}
    media="(prefers-color-scheme: light)"
  />
  <meta name="theme-color" content={THEME_RUNTIME_COLORS.light} data-runtime-theme-color />
  <meta name="msapplication-TileColor" content={THEME_RUNTIME_COLORS.midnight} />
  <meta name="color-scheme" content="light dark" />

  <style is:inline>
    html { background-color: #ffffff; }
    @media (prefers-color-scheme: dark) {
      html { background-color: #1d2021; }
    }
    html.dark,
    html[data-theme='dark'] { background-color: #1d2021; }
    html[data-color-mode='midnight'] { background-color: #1d2021; }
    html[data-theme='retro'],
    html[data-color-mode='retro'] { background-color: #ffffff; }
  </style>

  <!-- 安全性增强 -->
  <meta http-equiv="X-Content-Type-Options" content="nosniff" />
  <meta http-equiv="X-Frame-Options" content="DENY" />
  <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
  <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
  <meta 
    http-equiv="Content-Security-Policy" 
    content={`default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://analytics.ahrefs.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' data: https://gstatic.loli.net; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://analytics.ahrefs.com${posthogConnect ? ' ' + posthogConnect : ''};`} 
  />

  <!-- 关键文件链接 -->
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="manifest" href="/site.webmanifest" />
  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.title}
    href={new URL('rss.xml', Astro.site)}
  />

  <!-- 性能优化脚本 -->
  <script is:inline>
    // 预加载重要页面
    const criticalPages = ['/blog', '/about'];
    if ('requestIdleCallback' in window) {
      requestIdleCallback(() => {
        criticalPages.forEach(page => {
          const link = document.createElement('link');
          link.rel = 'prefetch';
          link.href = page;
          document.head.appendChild(link);
        });
      });
    }

    // LCP 优化 - 预加载首屏图片
    const preloadHeroImage = () => {
      const heroImg = document.querySelector('[data-hero-image]');
      if (heroImg && heroImg.dataset.src) {
        const link = document.createElement('link');
        link.rel = 'preload';
        link.href = heroImg.dataset.src;
        link.as = 'image';
        document.head.appendChild(link);
      }
    };
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', preloadHeroImage);
    } else {
      preloadHeroImage();
    }
  </script>

  <Favicons />
</head>
