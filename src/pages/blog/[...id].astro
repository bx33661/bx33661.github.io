    }
  }

  @media (min-width: 1024px) {
    .article-shell {
      padding: 30px 32px;
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.08);
    }
  }

  @media (max-width: 768px) {
    .article-shell {
      padding: 20px 20px;
