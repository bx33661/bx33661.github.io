import TableOfContents from '@/components/TableOfContents.astro'
import PasswordProtect from '@/components/react/password-protect'
import { badgeVariants } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { Separator } from '@/components/ui/separator'
import Layout from '@/layouts/Layout.astro'
import { getAdjacentPosts, getAllPostSlugs, getRelatedPosts } from '@/lib/data-utils'
import { formatDate, readingTime } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const postSlugs = await getAllPostSlugs()
  return postSlugs.map(({ slug, post }) => ({
    params: { id: slug }, // è¿™é‡Œidå‚æ•°å®é™…ä¸Šæ˜¯slug
    props: { post, slug },
  }))
}

const { post } = Astro.props
const currentSlug = Astro.params.id // è¿™é‡Œè·å–çš„æ˜¯slug
const { Content, headings } = await render(post)
const { next, prev } = await getAdjacentPosts(currentSlug)
const relatedPosts = await getRelatedPosts(post, 3)

// æ£€æŸ¥æ–‡ç« æ˜¯å¦è®¾ç½®äº†å¯†ç ä¿æŠ¤
const isPasswordProtected = !!post.data.password

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  datePublished: post.data.date,
  dateModified: post.data.date,
  author: {
    '@type': 'Person',
    name: post.data.authors ? post.data.authors[0] : 'Author',
  },
  image: new URL(`/image/${post.id}.png`, Astro.site).toString(),
  keywords: post.data.tags ? post.data.tags.join(', ') : '',
  description: post.data.description || '',
}
const currentUrl = Astro.url;
const shareUrl = Astro.site + 'blog/' + currentSlug
const avatarUrl = '/logo.png'
---

<Layout canonicalUrl={currentUrl} isWide={true}>
  <PostHead slot="head" post={post} />
  
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(structuredData)}
  />
  <section
    class="px-0 sm:px-6 grid grid-cols-1 gap-y-3 sm:gap-y-6 xl:grid-cols-[var(--toc-width)_minmax(0,var(--article-width))_var(--meta-width)] xl:gap-x-12 blog-layout-mobile blog-grid"
  >
    <div class="px-4 sm:px-0 sm:col-start-2">
      <Breadcrumbs
        items={[
          { href: '/blog', label: 'Blog', icon: 'lucide:archive' },
          { label: post.data.title, icon: 'lucide:file-text' },
