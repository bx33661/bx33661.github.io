---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PostHead from '@/components/PostHead.astro'
import PostNavigation from '@/components/PostNavigation.astro'
import TableOfContents from '@/components/TableOfContents.astro'
import PasswordProtect from '@/components/react/password-protect'
import { badgeVariants } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { Separator } from '@/components/ui/separator'
import Layout from '@/layouts/Layout.astro'
import { getAdjacentPosts, getAllPostSlugs, getRelatedPosts } from '@/lib/data-utils'
import { formatDate, readingTime } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const postSlugs = await getAllPostSlugs()
  return postSlugs.map(({ slug, post }) => ({
    params: { id: slug }, // 这里id参数实际上是slug
    props: { post, slug },
  }))
}

const { post } = Astro.props
const currentSlug = Astro.params.id // 这里获取的是slug
const { Content, headings } = await render(post)
const { next, prev } = await getAdjacentPosts(currentSlug)
const relatedPosts = await getRelatedPosts(post, 3)

// 检查文章是否设置了密码保护
const isPasswordProtected = !!post.data.password

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  datePublished: post.data.date,
  dateModified: post.data.date,
  author: {
    '@type': 'Person',
    name: post.data.authors ? post.data.authors[0] : 'Author',
  },
  image: new URL(`/image/${post.id}.png`, Astro.site).toString(),
  keywords: post.data.tags ? post.data.tags.join(', ') : '',
  description: post.data.description || '',
}
const currentUrl = Astro.url;
const shareUrl = Astro.site + 'blog/' + currentSlug
const avatarUrl = '/logo.png'
---

<Layout canonicalUrl={currentUrl} isWide={true}>
  <PostHead slot="head" post={post} />
  
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(structuredData)}
  />
  <section
    class="px-0 sm:px-6 grid grid-cols-1 gap-y-3 sm:gap-y-6 sm:grid-cols-[minmax(0px,1fr)_min(calc(var(--breakpoint-lg)-2rem),100%)_minmax(0px,1fr)] xl:grid-cols-[300px_minmax(0,800px)_300px] xl:gap-x-16 blog-layout-mobile"
  >
    <div class="px-4 sm:px-0 sm:col-start-2">
      <Breadcrumbs
        items={[
          { href: '/blog', label: 'Blog', icon: 'lucide:archive' },
          { label: post.data.title, icon: 'lucide:file-text' },
        ]}
      />
    </div>
    <section class="px-4 sm:px-0 sm:col-start-2 flex flex-col gap-y-3 sm:gap-y-6 text-start">
      <div class="flex flex-col">
        <h1
          class="mb-1 sm:mb-2 text-2xl sm:text-5xl leading-tight font-medium text-pretty"
        >
          {post.data.title}
        </h1>

        <div class="flex flex-wrap justify-start gap-2">
          {
            post.data.tags && post.data.tags.length > 0 ? (
              post.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag}`}
                  class={badgeVariants({ variant: 'secondary' })}
                >
                  <Icon name="lucide:hash" class="size-3" />
                  {tag}
                </a>
              ))
            ) : (
              <span class="text-muted-foreground text-sm">
                No tags available
              </span>
            )
          }
        </div>
      </div>
    </section>

    <div
      class="text-muted-foreground px-4 sm:px-0 sm:col-start-2 flex flex-wrap items-center justify-start gap-2 text-xs sm:text-sm"
    >
      <div class="flex items-center gap-2">
        <span>{formatDate(post.data.date)}</span>
        <Separator orientation="vertical" className="h-4!" />
        <span>{readingTime(post.body!)}</span>
        <Separator orientation="vertical" className="h-4!" />
        <span>By {(post.data.authors ?? []).join(' & ')}</span>
      </div>
    </div>

    {headings.length > 0 && <div class="hidden xl:block xl:col-start-1"><TableOfContents headings={headings} /></div>}

    {isPasswordProtected ? (
      <div class="sm:col-start-2">
        <PasswordProtect
          client:load
          articleId={post.id}
          correctPassword={post.data.password!}
        >
          <div class="article-shell">
            <article class="prose max-w-none sm:max-w-[95ch] xl:max-w-[820px] xl:mx-auto w-full">
              <Content />
            </article>
          </div>
        </PasswordProtect>
      </div>
    ) : (
      <div class="article-shell sm:col-start-2">
        <article class="prose max-w-none sm:max-w-[95ch] xl:max-w-[820px] xl:mx-auto w-full">
          <Content />
        </article>
      </div>
    )}

    <aside
      class="hidden xl:block xl:col-start-3 xl:sticky xl:top-26 xl:h-[calc(100vh-5rem)] xl:min-w-[280px] xl:max-w-[300px]"
    >
      <div class="space-y-6 bg-neutral-50/60 dark:bg-neutral-900/40 rounded-2xl border border-neutral-200 dark:border-neutral-800 p-5 shadow-sm">
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span class="text-sm text-neutral-500">分享</span>
            <div class="h-px flex-1 bg-neutral-200 dark:bg-neutral-800" />
          </div>
          <div class="flex flex-wrap gap-2">
            <Button variant="secondary" size="sm" id="copy-share-link" className="flex-1 justify-center">
              <Icon name="lucide:copy" class="size-4 mr-1" />
              复制链接
            </Button>
            <Link
              href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(shareUrl)}`}
              target="_blank"
              rel="noopener noreferrer"
              title="Share on X"
              aria-label="Share on X"
              class="flex-1"
            >
              <Button variant="outline" size="sm" className="w-full justify-center">
                <Icon name="line-md:twitter" class="size-4 mr-1" />
                X
              </Button>
            </Link>
          </div>
        </div>

        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span class="text-sm text-neutral-500">文章信息</span>
            <div class="h-px flex-1 bg-neutral-200 dark:bg-neutral-800" />
          </div>
          <div class="space-y-2 text-sm text-neutral-700 dark:text-neutral-300">
            <div class="flex justify-between">
              <span>发布时间</span>
              <span>{formatDate(post.data.date)}</span>
            </div>
            <div class="flex justify-between">
              <span>阅读时间</span>
              <span>{readingTime(post.body!)}</span>
            </div>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex items-center gap-2">
                <span>标签</span>
                <div class="flex flex-wrap gap-1">
                  {post.data.tags.slice(0, 3).map((tag) => (
                    <span class="text-xs px-2 py-0.5 rounded bg-neutral-100 dark:bg-neutral-800 text-neutral-600 dark:text-neutral-300">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>

        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span class="text-sm text-neutral-500">作者</span>
            <div class="h-px flex-1 bg-neutral-200 dark:bg-neutral-800" />
          </div>
          <div class="flex items-center gap-3">
            <img
              src={avatarUrl}
              alt={post.data.authors?.[0] || 'bx'}
              class="w-10 h-10 rounded-full border border-neutral-200 dark:border-neutral-700 object-cover bg-white"
              loading="lazy"
              decoding="async"
            />
            <div class="space-y-1">
              <div class="font-medium text-neutral-900 dark:text-white">{post.data.authors?.[0] || 'bx'}</div>
              <div class="text-xs text-neutral-500 dark:text-neutral-400">安全 / 开发 / 记录</div>
            </div>
          </div>
          <div class="flex gap-3 text-neutral-500 dark:text-neutral-400">
            <Link href="https://github.com/bx33661" target="_blank" rel="noopener noreferrer" class="hover:text-neutral-900 dark:hover:text-white transition-colors">
              <Icon name="line-md:github" class="size-5" />
            </Link>
            <Link href="mailto:bx@gmail.com" class="hover:text-neutral-900 dark:hover:text-white transition-colors">
              <Icon name="lucide:mail" class="size-5" />
            </Link>
          </div>
        </div>

        {relatedPosts && relatedPosts.length > 0 && (
          <div class="space-y-3">
            <div class="flex items-center gap-2">
              <span class="text-sm text-neutral-500">相关文章</span>
              <div class="h-px flex-1 bg-neutral-200 dark:bg-neutral-800" />
            </div>
            <div class="space-y-3">
              {relatedPosts.slice(0, 3).map((relatedPost) => (
                <Link
                  href={`/blog/${relatedPost.id}`}
                  class="block p-3 rounded-lg border border-neutral-200 dark:border-neutral-800 hover:border-primary/50 transition-colors"
                >
                  <div class="font-medium text-neutral-900 dark:text-white line-clamp-2">
                    {relatedPost.data.title}
                  </div>
                  <div class="text-xs text-neutral-500 dark:text-neutral-400 mt-1">
                    {formatDate(relatedPost.data.date)}
                  </div>
                </Link>
              ))}
            </div>
          </div>
        )}

        <div class="rounded-lg bg-white/50 dark:bg-neutral-900/60 border border-neutral-200 dark:border-neutral-800 p-3">
          <div class="text-sm text-neutral-700 dark:text-neutral-300 flex items-center gap-2">
            <Icon name="line-md:star" class="size-4 text-yellow-500" />
            如果觉得有帮助，欢迎 GitHub 点星支持
          </div>
          <Link
            href="https://github.com/bx33661/bx33661"
            target="_blank"
            rel="noopener noreferrer"
            class="mt-2 inline-flex items-center gap-2 text-primary hover:underline text-sm"
          >
            <Icon name="line-md:github" class="size-4" />
            GitHub Repo
          </Link>
        </div>
      </div>
    </aside>

    <PostNavigation prevPost={prev} nextPost={next} />
  </section>

  <!-- 阅读进度条 -->
  <div class="fixed top-0 left-0 w-full h-1 bg-neutral-200 dark:bg-neutral-800 z-50">
    <div 
      id="reading-progress" 
      class="h-full bg-gradient-to-r from-blue-500 to-purple-600 transition-all duration-300"
      style="width: 0%"
    ></div>
  </div>

  <Button
    variant="outline"
    size="icon"
    className="group fixed right-8 bottom-8 z-50 hidden"
    id="scroll-to-top"
    title="Scroll to top"
    aria-label="Scroll to top"
  >
    <Icon
      name="lucide:arrow-up"
      class="mx-auto size-4 transition-all group-hover:-translate-y-0.5"
    />
  </Button>

  <script>
    document.addEventListener('astro:page-load', () => {
      const scrollToTopButton = document.getElementById('scroll-to-top')
      const footer = document.querySelector('footer')
      const readingProgress = document.getElementById('reading-progress')
      const article = document.querySelector('article')

      // 阅读进度条功能
      if (readingProgress && article) {
        window.addEventListener('scroll', () => {
          const articleRect = article.getBoundingClientRect()
          const articleHeight = article.offsetHeight
          const windowHeight = window.innerHeight
          const scrollTop = window.scrollY
          
          // 计算阅读进度
          const progress = Math.min(
            Math.max(
              (scrollTop + windowHeight - articleRect.top) / (articleHeight + windowHeight) * 100,
              0
            ),
            100
          )
          
          readingProgress.style.width = `${progress}%`
        })
      }

      // 回到顶部按钮功能
      if (scrollToTopButton && footer) {
        scrollToTopButton.addEventListener('click', () => {
          window.scrollTo({ top: 0, behavior: 'smooth' })
        })

        window.addEventListener('scroll', () => {
          const footerRect = footer.getBoundingClientRect()
          const isFooterVisible = footerRect.top <= window.innerHeight

          scrollToTopButton.classList.toggle(
            'hidden',
            window.scrollY <= 300 || isFooterVisible
          )
        })
      }
    })
  </script>
</Layout>

<style>
  .article-shell {
    background: color-mix(in srgb, var(--color-card, #0b1220) 92%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-border, #e5e7eb) 85%, transparent);
    border-radius: 18px;
    box-shadow: 0 12px 36px rgba(0, 0, 0, 0.06);
    padding: 24px 24px;
    backdrop-filter: blur(4px);
  }

  .article-shell .prose {
    color: var(--foreground);
  }

  .article-shell .prose p {
    line-height: 1.85;
    font-size: 1.03rem;
  }

  .article-shell .prose h2,
  .article-shell .prose h3,
  .article-shell .prose h4 {
    scroll-margin-top: 110px;
    letter-spacing: -0.01em;
  }

  .article-shell .prose h2 { margin-top: 2.25rem; margin-bottom: 1rem; }
  .article-shell .prose h3 { margin-top: 1.75rem; margin-bottom: 0.85rem; }

  .article-shell .prose img {
    border-radius: 14px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    margin: 1.5rem auto;
  }

  .article-shell .prose blockquote {
    background: color-mix(in srgb, var(--color-muted, #f6f7fb) 70%, transparent);
    border-left: 4px solid color-mix(in srgb, var(--color-primary, #7aa2f7) 65%, transparent);
    border-radius: 12px;
    padding: 12px 14px;
  }

  .article-shell .prose pre {
    border: 1px solid color-mix(in srgb, var(--color-border, #e5e7eb) 90%, transparent);
    border-radius: 14px;
    padding: 14px 16px;
    background: color-mix(in srgb, var(--color-muted, #0f172a) 65%, transparent);
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.04);
  }

  .article-shell .prose code:not(pre code) {
    background: color-mix(in srgb, var(--color-muted, #e2e8f0) 70%, transparent);
    padding: 2px 6px;
    border-radius: 6px;
    font-size: 0.95em;
  }

  .article-shell .prose ul,
  .article-shell .prose ol {
    margin-left: 1.1rem;
    padding-left: 0.3rem;
    line-height: 1.8;
  }

  .article-shell .prose a {
    color: var(--color-primary, #7aa2f7);
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .article-shell .prose a:hover {
    color: color-mix(in srgb, var(--color-primary, #7aa2f7) 80%, white 20%);
  }

  @media (min-width: 640px) {
    .article-shell {
      padding: 26px 28px;
    }
  }

  @media (min-width: 1024px) {
    .article-shell {
      padding: 30px 32px;
    }
  }

  @media (max-width: 768px) {
    .article-shell {
      padding: 20px 20px;
      border-radius: 14px;
    }

    .article-shell .prose p {
      font-size: 1rem;
      line-height: 1.75;
    }
  }
</style>
