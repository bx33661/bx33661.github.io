---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/skills'
import { buttonVariants } from '@/components/ui/button'
import Logo from '@/components/ui/logo'
import Layout from '@/layouts/Layout.astro'
import { SITE, SOCIAL_LINKS } from '@/consts'
import { Icon } from 'astro-icon/components'
import Breadcrumbs from '@/components/Breadcrumbs.astro'

const currentUrl = Astro.url;
---

<Layout canonicalUrl={currentUrl}>
  <PageHead slot="head" title="个人简历 - BX" />
  <div class="flex flex-col gap-y-12 px-4 py-8 sm:px-8 lg:px-16">
    <Breadcrumbs items={[{ label: '个人简历', icon: 'lucide:user' }]} />
    
    <!-- 个人基本信息 -->
    <section class="flex flex-col items-center text-center sm:flex-row sm:items-start sm:gap-8 sm:text-left">
      <div class="relative overflow-hidden rounded-lg sm:shrink-0 sm:overflow-hidden sm:rounded-lg">
        <Logo className="h-auto w-40 object-cover sm:w-48 md:w-56 lg:w-64" />
      </div>
      <div class="mt-8 sm:mt-0 sm:flex-1">
        <h1 class="font-custom text-foreground text-start text-4xl font-extrabold sm:text-5xl">
          BX
        </h1>
        <p class="text-muted-foreground mt-2 text-start text-xl font-medium">
          网络安全研究员 | 信息安全专业
        </p>
        <div class="mt-6 space-y-3 text-start">
          <div class="flex items-center gap-3">
            <Icon name="lucide:graduation-cap" class="size-5 text-primary" />
            <span class="text-foreground">海南大学 · 信息安全专业 · 本科在读</span>
          </div>
          <div class="flex items-center gap-3">
            <Icon name="lucide:shield" class="size-5 text-primary" />
            <span class="text-foreground">HnuSec 战队成员</span>
          </div>
          <div class="flex items-center gap-3">
            <Icon name="lucide:map-pin" class="size-5 text-primary" />
            <span class="text-foreground">{SITE.location}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- 专业简介 -->
    <section class="space-y-6">
      <h2 class="font-custom text-foreground text-3xl font-bold flex items-center gap-3">
        <Icon name="lucide:user-circle" class="size-8" />
        专业简介
      </h2>
      <div class="bg-muted/30 rounded-lg p-6 border border-border">
        <p class="text-foreground text-lg leading-relaxed">
          专注于网络安全领域的研究与实践，具备扎实的信息安全理论基础和丰富的实战经验。
          作为 HnuSec 战队成员，积极参与各类安全竞赛和技术研究，持续提升专业技能。
        </p>
      </div>
    </section>

    <!-- 研究方向 -->
    <section class="space-y-6">
      <h2 class="font-custom text-foreground text-3xl font-bold flex items-center gap-3">
        <Icon name="lucide:target" class="size-8" />
        研究方向
      </h2>
      <div class="grid gap-4 sm:grid-cols-2">
        <div class="bg-muted/30 rounded-lg p-5 border border-border hover:border-primary transition-colors">
          <div class="flex items-start gap-3">
            <Icon name="lucide:globe" class="size-6 text-primary mt-1" />
            <div>
              <h3 class="text-foreground font-semibold text-lg mb-2">Web 安全</h3>
              <p class="text-muted-foreground text-sm">Web 应用漏洞挖掘、代码审计、安全加固</p>
            </div>
          </div>
        </div>
        <div class="bg-muted/30 rounded-lg p-5 border border-border hover:border-primary transition-colors">
          <div class="flex items-start gap-3">
            <Icon name="lucide:network" class="size-6 text-primary mt-1" />
            <div>
              <h3 class="text-foreground font-semibold text-lg mb-2">网络安全</h3>
              <p class="text-muted-foreground text-sm">网络协议分析、流量分析、入侵检测</p>
            </div>
          </div>
        </div>
        <div class="bg-muted/30 rounded-lg p-5 border border-border hover:border-primary transition-colors">
          <div class="flex items-start gap-3">
            <Icon name="lucide:search" class="size-6 text-primary mt-1" />
            <div>
              <h3 class="text-foreground font-semibold text-lg mb-2">渗透测试</h3>
              <p class="text-muted-foreground text-sm">渗透测试方法论、攻防演练、红队技术</p>
            </div>
          </div>
        </div>
        <div class="bg-muted/30 rounded-lg p-5 border border-border hover:border-primary transition-colors">
          <div class="flex items-start gap-3">
            <Icon name="lucide:bug" class="size-6 text-primary mt-1" />
            <div>
              <h3 class="text-foreground font-semibold text-lg mb-2">漏洞分析</h3>
              <p class="text-muted-foreground text-sm">漏洞原理研究、PoC 编写、安全情报分析</p>
            </div>
          </div>
        </div>
      </div>
    </section>


    <!-- 联系方式 -->
    <section class="space-y-6">
      <h2 class="font-custom text-foreground text-3xl font-bold flex items-center gap-3">
        <Icon name="lucide:mail" class="size-8" />
        联系方式
      </h2>
      <p class="text-muted-foreground text-lg">
        欢迎交流技术问题、合作机会或安全研究话题
      </p>
      <div class="bg-muted/30 rounded-lg p-6 border border-border">
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="flex items-center gap-3">
            <Icon name="lucide:message-circle" class="size-5 text-primary" />
            <div>
              <p class="text-sm text-muted-foreground">微信</p>
              <p class="text-foreground font-medium">bx33661</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <Icon name="lucide:message-square" class="size-5 text-primary" />
            <div>
              <p class="text-sm text-muted-foreground">QQ</p>
              <p class="text-foreground font-medium">1811753380</p>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap gap-4 mt-6">
        {
          SOCIAL_LINKS.slice(0, -1).map((link) => (
            <Link
              href={link.href}
              class={buttonVariants({ variant: 'outline' }) + ' flex items-center gap-2'}
              aria-label={`联系我通过 ${link.label}`}
            >
              <Icon name="lucide:external-link" class="size-4" />
              {link.label}
            </Link>
          ))
        }
      </div>
    </section>

    <!-- 返回首页 -->
    <div class="flex justify-center pt-8">
      <Link
        href="/"
        class={buttonVariants({ variant: 'default' }) + ' group'}
      >
        <Icon name="lucide:home" class="mr-2 size-4" />
        返回首页
        <span class="ml-2 transition-transform group-hover:translate-x-1">&rarr;</span>
      </Link>
    </div>
  </div>
</Layout>