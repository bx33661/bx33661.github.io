---
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { SITE } from '@/consts'
import { GALLERY_IMAGES, buildGalleryImageSources } from '@/data/gallery'

const currentUrl = Astro.url.toString()
const featuredPhotos = GALLERY_IMAGES.slice(0, 6).map((item) => buildGalleryImageSources(item))

const milestones = [
  '海南大学 · 信息安全（2023 - 至今）',
  'HnuSec 核心成员（CTF / Web Security）',
  '持续进行 Web 安全、漏洞分析与工程实践输出',
]

const focuses = ['漏洞研究', 'AI4Sec', '开源实践']
---

<Layout canonicalUrl={currentUrl}>
  <PageHead
    slot="head"
    title="关于我"
    description="BX 的背景、研究方向与作品实践。"
    canonicalURL={currentUrl}
  />

  <div class="page">
    <h1>关于我</h1>
    <p class="about-avatar-wrap">
      <img
        class="about-avatar"
        src="/bx.jpg"
        alt="BX 头像"
        loading="eager"
        decoding="async"
        width="42"
        height="42"
      />
    </p>
    <p>我是 {SITE.title}，主要关注网络安全研究、工程开发与技术分享。</p>
    <p>所在地：{SITE.location}</p>
    <p>
      <a href="mailto:bx33661@gmail.com">邮箱联系</a>
      {' :: '}
      <a href="https://github.com/bx33661" target="_blank" rel="noopener noreferrer">GitHub</a>
    </p>
  </div>

  <div class="posts">
    <h2 class="posts-title">成长路径</h2>
    <ul>
      {milestones.map((item) => <li>{item}</li>)}
    </ul>
  </div>

  <div class="posts">
    <h2 class="posts-title">当前关注</h2>
    <ul>
      {focuses.map((item) => <li>{item}</li>)}
    </ul>
  </div>

  <div class="posts">
    <h2 class="posts-title">相册精选</h2>
    {featuredPhotos.length === 0 ? (
      <p>暂无照片。</p>
    ) : (
      <>
        <div class="about-album-grid">
          {featuredPhotos.map((photo) => (
            <article class="about-album-card">
              <a class="about-album-link" href={photo.originalSrc} target="_blank" rel="noopener noreferrer" aria-label={`查看大图：${photo.title}`}>
                <img
                  class="about-album-image"
                  src={photo.optimizedSrc}
                  srcset={photo.jpgSrcSet}
                  sizes="(max-width: 767px) 96vw, (max-width: 1080px) 48vw, 25vw"
                  alt={photo.alt}
                  loading="lazy"
                  decoding="async"
                />
              </a>
              <p class="about-album-caption">{photo.title}</p>
            </article>
          ))}
        </div>
        <p><a href="/album/" class="button inline">[查看完整相册]</a></p>
      </>
    )}
  </div>
</Layout>

<style>
  .about-avatar-wrap {
    margin: 8px 0 12px;
  }

  .about-avatar {
    width: 42px !important;
    height: 42px !important;
    border-radius: 999px;
    border: 2px solid var(--accent) !important;
    padding: 0 !important;
    margin: 0 !important;
    object-fit: cover;
  }

  .about-album-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 12px;
    margin-top: 8px;
  }

  .about-album-card {
    margin: 0;
  }

  .about-album-link {
    display: block;
    text-decoration: none;
    border: 4px solid var(--accent);
    padding: 4px;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: var(--background);
  }

  .about-album-image {
    display: block;
    width: 100%;
    height: 100%;
    margin: 0 !important;
    padding: 0 !important;
    border: 0 !important;
    object-fit: cover;
  }

  .about-album-caption {
    margin-top: 6px;
    font-size: 0.9rem;
    color: color-mix(in srgb, var(--foreground) 70%, transparent);
  }
</style>
