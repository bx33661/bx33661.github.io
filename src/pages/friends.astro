---
import { FRIEND_LINKS, ORGANIZATION_LINKS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'

const currentUrl = Astro.url.toString()

const info = {
  name: 'BX的博客',
  address: 'https://www.bx33661.com',
  desc: '专注于安全研究和技术分享的个人博客',
  avatar: '/logonew.jpg',
}

const getHost = (url: string) => {
  try {
    return new URL(url).hostname.replace(/^www\./, '')
  } catch {
    return url
  }
}

const getFallbackText = (name: string) => name.trim().slice(0, 1).toUpperCase() || '?'

const friendCards = FRIEND_LINKS.map((item) => ({
  ...item,
  host: getHost(item.url),
  fallback: getFallbackText(item.name),
}))

const organizationCards = ORGANIZATION_LINKS.map((item) => ({
  ...item,
  host: getHost(item.url),
  fallback: getFallbackText(item.name),
}))

const totalLinks = friendCards.length + organizationCards.length
---

<Layout title="友情链接" description="技术站点与安全社区链接集合。" canonicalURL={currentUrl}>
  <Header />

  <main id="main-content" class="app-layout pb-10">
  <section class="friends-hero">
    <div class="friends-hero__bg" aria-hidden="true"></div>
    <h1>友情链接</h1>
    <p>这里整理了我长期关注的技术博客与安全社区，欢迎互相交流、共同进步。</p>
    <div class="friends-actions">
      <a href="mailto:bx33661@gmail.com">邮件申请互链</a>
      <a href="https://github.com/bx33661/bx33661.github.io/issues" target="_blank" rel="noopener noreferrer">通过 Issue 申请</a>
    </div>
    <div class="friend-hero">
      <div class="hero-chip">总链接 {totalLinks}</div>
      <div class="hero-chip">博客 {friendCards.length}</div>
      <div class="hero-chip">组织 {organizationCards.length}</div>
    </div>
  </section>

  <div class="friend-section">
    <h2 class="friend-section__title">技术博客</h2>
    <div class="friend-grid">
      {friendCards.map((friend) => (
        <article class="friend-card">
          <a class="friend-card__link" href={friend.url} target="_blank" rel="noopener noreferrer" aria-label={`访问 ${friend.name}`}>
            <div class="friend-card__avatar-wrap">
              {friend.avatar ? (
                <img class="friend-card__avatar" src={friend.avatar} alt={`${friend.name} 头像`} loading="lazy" decoding="async" referrerpolicy="no-referrer" />
              ) : (
                <span class="friend-card__avatar-fallback">{friend.fallback}</span>
              )}
            </div>
            <div class="friend-card__content">
              <h3 class="friend-card__title">{friend.name}</h3>
              <p class="friend-card__desc">{friend.description}</p>
              <div class="friend-card__tags">
                <span class="friend-tag friend-tag--host">{friend.host}</span>
              </div>
            </div>
            <span class="friend-card__arrow">↗</span>
          </a>
        </article>
      ))}
    </div>
  </div>

  <div class="friend-section">
    <h2 class="friend-section__title">组织与社区</h2>
    <div class="friend-grid">
      {organizationCards.map((org) => (
        <article class="friend-card friend-card--org">
          <a class="friend-card__link" href={org.url} target="_blank" rel="noopener noreferrer" aria-label={`访问 ${org.name}`}>
            <div class="friend-card__avatar-wrap">
              {org.avatar ? (
                <img class="friend-card__avatar" src={org.avatar} alt={`${org.name} 头像`} loading="lazy" decoding="async" referrerpolicy="no-referrer" />
              ) : (
                <span class="friend-card__avatar-fallback">{org.fallback}</span>
              )}
            </div>
            <div class="friend-card__content">
              <h3 class="friend-card__title">{org.name}</h3>
              <p class="friend-card__desc">{org.description}</p>
              <div class="friend-card__tags">
                <span class="friend-tag friend-tag--host">{org.host}</span>
                {org.tags?.map((tag) => <span class="friend-tag">{tag}</span>)}
              </div>
            </div>
            <span class="friend-card__arrow">↗</span>
          </a>
        </article>
      ))}
    </div>
  </div>

  <div class="friend-section">
    <h2 class="friend-section__title">本站信息</h2>
    <article class="friend-card friend-card--self">
      <a class="friend-card__link" href={info.address} target="_blank" rel="noopener noreferrer">
        <div class="friend-card__avatar-wrap">
          <img class="friend-card__avatar" src={info.avatar} alt={`${info.name} 头像`} loading="eager" decoding="async" />
        </div>
        <div class="friend-card__content">
          <h3 class="friend-card__title">{info.name}</h3>
          <p class="friend-card__desc">{info.desc}</p>
          <div class="friend-card__tags">
            <span class="friend-tag friend-tag--host">{getHost(info.address)}</span>
            <span class="friend-tag">Security</span>
            <span class="friend-tag">Blog</span>
          </div>
        </div>
        <span class="friend-card__arrow">↗</span>
      </a>
    </article>
  </div>
  </main>

  <Footer />
</Layout>

<style>
  .friends-hero {
    position: relative;
    overflow: hidden;
    border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
    border-radius: 1.4rem;
    padding: 1.5rem 1.2rem;
    background:
      linear-gradient(
        145deg,
        color-mix(in srgb, var(--accent) 10%, transparent),
        color-mix(in srgb, var(--background) 94%, transparent)
      );
  }

  .friends-hero__bg {
    position: absolute;
    inset: auto -10% -45% auto;
    width: 340px;
    height: 340px;
    border-radius: 999px;
    background: radial-gradient(
      circle,
      color-mix(in srgb, var(--accent) 24%, transparent) 0%,
      transparent 70%
    );
    filter: blur(20px);
    pointer-events: none;
  }

  .friends-hero h1 {
    margin: 0;
    font-size: clamp(2rem, 3.4vw, 2.9rem);
    line-height: 1.1;
    color: color-mix(in srgb, var(--accent) 70%, var(--foreground));
  }

  .friends-hero p {
    max-width: 56ch;
    margin: 0.8rem 0 0;
    color: color-mix(in srgb, var(--foreground) 74%, transparent);
  }

  .friends-actions {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .friends-actions a {
    text-decoration: none;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, var(--accent) 24%, transparent);
    padding: 0.36rem 0.85rem;
    font-size: 0.88rem;
    color: color-mix(in srgb, var(--accent) 72%, var(--foreground));
    background: color-mix(in srgb, var(--accent) 8%, var(--background));
    transition: all 0.2s ease;
  }

  .friends-actions a:hover {
    border-color: color-mix(in srgb, var(--accent) 45%, transparent);
    transform: translateY(-1px);
  }

  .friend-hero {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin: 14px 0 0;
  }

  .hero-chip {
    padding: 4px 10px;
    border: 1px solid color-mix(in srgb, var(--accent) 28%, transparent);
    font-size: 0.88rem;
    border-radius: 999px;
    background: color-mix(in srgb, var(--background) 82%, var(--accent));
  }

  .friend-section {
    margin-top: 28px;
  }

  .friend-section__title {
    margin: 0;
    font-size: 1.1rem;
    letter-spacing: 0.04em;
    color: color-mix(in srgb, var(--foreground) 92%, transparent);
  }

  .friend-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(265px, 1fr));
    gap: 12px;
    margin-top: 12px;
  }

  .friend-card {
    position: relative;
    margin: 0;
    border: 1px solid color-mix(in srgb, var(--accent) 22%, transparent);
    border-radius: 1rem;
    background:
      linear-gradient(
        150deg,
        color-mix(in srgb, var(--accent) 8%, transparent),
        color-mix(in srgb, var(--background) 94%, transparent)
      );
    backdrop-filter: blur(8px);
    transition: border-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .friend-card:hover {
    border-color: color-mix(in srgb, var(--accent) 45%, transparent);
    transform: translateY(-2px);
    box-shadow: 0 12px 28px -16px color-mix(in srgb, var(--accent) 35%, transparent);
  }

  .friend-card--org {
    background:
      linear-gradient(
        140deg,
        color-mix(in srgb, var(--accent) 11%, transparent) 0%,
        transparent 58%
      ),
      var(--background);
  }

  .friend-card--self {
    max-width: 560px;
  }

  .friend-card__link {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 12px;
    align-items: center;
    padding: 12px 13px;
    text-decoration: none;
    color: inherit;
  }

  .friend-card__avatar-wrap {
    width: 52px;
    height: 52px;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, var(--accent) 35%, transparent);
    background: color-mix(in srgb, var(--background) 80%, var(--accent));
    display: grid;
    place-items: center;
    overflow: hidden;
    flex: 0 0 auto;
  }

  .friend-card__avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin: 0 !important;
    padding: 0 !important;
    border: 0 !important;
  }

  .friend-card__avatar-fallback {
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.04em;
  }

  .friend-card__content {
    min-width: 0;
  }

  .friend-card__title {
    margin: 0 0 4px;
    font-size: 1rem;
  }

  .friend-card__desc {
    margin: 0;
    font-size: 0.86rem;
    line-height: 1.45;
    color: color-mix(in srgb, var(--foreground) 74%, transparent);
  }

  .friend-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }

  .friend-tag {
    border: 1px solid color-mix(in srgb, var(--accent) 38%, transparent);
    border-radius: 999px;
    padding: 2px 7px;
    font-size: 0.74rem;
    white-space: nowrap;
    color: color-mix(in srgb, var(--foreground) 72%, transparent);
  }

  .friend-tag--host {
    border-color: color-mix(in srgb, var(--accent) 56%, transparent);
    color: color-mix(in srgb, var(--accent) 72%, var(--foreground));
    font-weight: 600;
  }

  .friend-card__arrow {
    font-size: 0.95rem;
    opacity: 0.7;
    align-self: flex-start;
  }

  @media (max-width: 640px) {
    .friend-grid {
      grid-template-columns: 1fr;
    }

    .friend-card__link {
      grid-template-columns: auto 1fr;
    }

    .friend-card__arrow {
      display: none;
    }
  }
</style>
