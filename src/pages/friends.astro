---
import { FRIEND_LINKS, ORGANIZATION_LINKS } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'

const currentUrl = Astro.url.toString()

const info = {
  name: 'BX的博客',
  address: 'https://www.bx33661.com',
  desc: '专注于安全研究和技术分享的个人博客',
  avatar: '/logonew.jpg',
}

const getHost = (url: string) => {
  try {
    return new URL(url).hostname.replace(/^www\./, '')
  } catch {
    return url
  }
}

const getFallbackText = (name: string) => name.trim().slice(0, 1).toUpperCase() || '?'

const friendCards = FRIEND_LINKS.map((item) => ({
  ...item,
  host: getHost(item.url),
  fallback: getFallbackText(item.name),
}))

const organizationCards = ORGANIZATION_LINKS.map((item) => ({
  ...item,
  host: getHost(item.url),
  fallback: getFallbackText(item.name),
}))

const totalLinks = friendCards.length + organizationCards.length
---

<Layout title="友情链接" description="技术站点与安全社区链接集合。" canonicalURL={currentUrl}>
  <div class="friends-page">
    <Header />

    <main id="main-content" class="friends-main">
      <div class="friends-container">
        <!-- Section header -->
        <div class="friends-topbar">
          <h1 class="friends-heading">Friends</h1>
          <div class="friends-topbar-actions">
            <a href="mailto:bx33661@gmail.com" class="friends-apply-btn" aria-label="邮件申请互链">
              Apply Link
            </a>
          </div>
        </div>

        <!-- Blog cards -->
        <section aria-label="技术博客">
          <h2 class="friends-section-label">技术博客</h2>
          <div class="friends-grid">
            {friendCards.map((friend, index) => (
              <a
                class="fc"
                href={friend.url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`访问 ${friend.name}`}
                style={`--i:${index}`}
              >
                <div class="fc-back">
                  <div class="fc-avatar-area">
                    {friend.avatar ? (
                      <img class="fc-avatar" src={friend.avatar} alt="" loading="lazy" decoding="async" referrerpolicy="no-referrer" />
                    ) : (
                      <span class="fc-avatar-fallback">{friend.fallback}</span>
                    )}
                  </div>
                </div>
                <div class="fc-front">
                  <div class="fc-front-title">
                    <h3>{friend.name}</h3>
                  </div>
                  <div class="fc-front-footer">
                    <span class="fc-desc">{friend.description}</span>
                    <span class="fc-host">{friend.host}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Organizations -->
        <section aria-label="组织与社区">
          <h2 class="friends-section-label">组织与社区</h2>
          <div class="friends-grid">
            {organizationCards.map((org, index) => (
              <a
                class="fc fc--org"
                href={org.url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`访问 ${org.name}`}
                style={`--i:${index}`}
              >
                <div class="fc-back">
                  <div class="fc-avatar-area">
                    {org.avatar ? (
                      <img class="fc-avatar" src={org.avatar} alt="" loading="lazy" decoding="async" referrerpolicy="no-referrer" />
                    ) : (
                      <span class="fc-avatar-fallback">{org.fallback}</span>
                    )}
                  </div>
                </div>
                <div class="fc-front">
                  <div class="fc-front-title">
                    <h3>{org.name}</h3>
                  </div>
                  <div class="fc-front-footer">
                    <div class="fc-tags">
                      {org.tags?.map((tag) => <span class="fc-tag">{tag}</span>)}
                    </div>
                    <span class="fc-host">{org.host}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Self info card -->
        <section aria-label="本站信息">
          <h2 class="friends-section-label">本站信息</h2>
          <div class="friends-grid friends-grid--single">
            <a class="fc fc--self" href={info.address} target="_blank" rel="noopener noreferrer">
              <div class="fc-back">
                <div class="fc-avatar-area">
                  <img class="fc-avatar" src={info.avatar} alt="" loading="eager" decoding="async" />
                </div>
              </div>
              <div class="fc-front">
                <div class="fc-front-title">
                  <h3>{info.name}</h3>
                </div>
                <div class="fc-front-footer">
                  <span class="fc-desc">{info.desc}</span>
                  <span class="fc-host">{getHost(info.address)}</span>
                </div>
              </div>
            </a>
          </div>
        </section>
      </div>
    </main>

    <Footer />
  </div>
</Layout>

<style>
  /* ===== Dark page wrapper ===== */
  .friends-page {
    min-height: 100vh;
    background: #191919;
  }

  /* Force header to dark mode in this context */
  .friends-page :global(.header-glass) {
    background: rgba(25, 25, 25, 0.85) !important;
    backdrop-filter: blur(20px) !important;
    -webkit-backdrop-filter: blur(20px) !important;
    border-bottom-color: rgba(255, 255, 255, 0.06) !important;
  }
  .friends-page :global(.nav-logo-word),
  .friends-page :global(.nav-link),
  .friends-page :global(.nav-icon-btn) {
    color: rgba(255, 255, 255, 0.7) !important;
  }
  .friends-page :global(.nav-link:hover),
  .friends-page :global(.nav-icon-btn:hover) {
    color: #fff !important;
    background: rgba(255, 255, 255, 0.08) !important;
  }
  .friends-page :global(.nav-active) {
    color: #fff !important;
    background: rgba(255, 255, 255, 0.1) !important;
  }
  .friends-page :global(.site-brand-logo) {
    border-color: rgba(255, 255, 255, 0.12) !important;
  }
  .friends-page :global(.nav-quick-btn) {
    border-color: rgba(255, 255, 255, 0.1) !important;
    background: rgba(255, 255, 255, 0.06) !important;
    color: rgba(255, 255, 255, 0.6) !important;
  }
  .friends-page :global(.nav-quick-btn:hover) {
    background: rgba(255, 255, 255, 0.12) !important;
    color: #fff !important;
  }
  .friends-page :global(.nav-search-btn) {
    border-color: rgba(255, 255, 255, 0.1) !important;
    background: rgba(255, 255, 255, 0.06) !important;
    color: rgba(255, 255, 255, 0.6) !important;
  }
  .friends-page :global(.nav-search-btn:hover) {
    background: rgba(255, 255, 255, 0.12) !important;
    color: #fff !important;
  }
  .friends-page :global(.nav-kbd) {
    border-color: rgba(255, 255, 255, 0.1) !important;
    background: rgba(0, 0, 0, 0.3) !important;
    color: rgba(255, 255, 255, 0.5) !important;
  }
  .friends-page :global(.hamburger-line) {
    background: rgba(255, 255, 255, 0.7) !important;
  }
  .friends-page :global(footer) {
    color: rgba(255, 255, 255, 0.4) !important;
    border-color: rgba(255, 255, 255, 0.06) !important;
  }
  .friends-page :global(footer a) {
    color: rgba(255, 255, 255, 0.5) !important;
  }
  .friends-page :global(footer a:hover) {
    color: #fff !important;
  }

  /* ===== Main layout ===== */
  .friends-main {
    flex: 1;
    min-height: 100vh;
    padding: 1rem 1rem 4rem;
  }

  @media (min-width: 640px) {
    .friends-main {
      padding: 1.5rem 1.5rem 4rem;
    }
  }

  @media (min-width: 1024px) {
    .friends-main {
      padding: 2rem 2rem 4rem;
    }
  }

  .friends-container {
    margin: 0 auto;
    width: 100%;
    max-width: 912px;
  }

  /* ===== Top bar ===== */
  .friends-topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3rem;
    margin-bottom: 1.5rem;
  }

  .friends-heading {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #fff;
    letter-spacing: -0.01em;
  }

  .friends-apply-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    background: #f5f5f5;
    color: #191919;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s ease;
    white-space: nowrap;
  }

  .friends-apply-btn:hover {
    background: rgba(245, 245, 245, 0.9);
  }

  /* ===== Section labels ===== */
  .friends-section-label {
    margin: 2.5rem 0 1rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.4);
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .friends-section-label:first-of-type {
    margin-top: 0;
  }

  /* ===== Grid ===== */
  .friends-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .friends-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .friends-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  .friends-grid--single {
    max-width: 288px;
  }

  /* ===== Folder card (fc) ===== */
  @keyframes cardIn {
    from {
      opacity: 0;
      transform: translateY(10px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .fc {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    width: 100%;
    animation: cardIn 0.3s ease-out backwards;
    animation-delay: calc(var(--i, 0) * 30ms);
    perspective: 1200px;
  }

  /* Back panel — contains avatar */
  .fc-back {
    position: relative;
    height: 160px;
    border-radius: 1rem;
    background: #1e1e1e;
    border: 1px solid rgba(255, 255, 255, 0.06);
    overflow: hidden;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
                background-color 0.3s ease;
    transform-style: preserve-3d;
    transform-origin: center bottom;
  }

  .fc:hover .fc-back {
    transform: rotateX(15deg);
    background: #222222;
  }

  .fc-avatar-area {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transform-style: flat;
    transform-origin: center bottom;
  }

  .fc:hover .fc-avatar-area {
    transform: rotateX(-15deg);
  }

  .fc-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(255, 255, 255, 0.08);
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1),
                border-color 0.3s ease;
    margin: 0 !important;
    padding: 0 !important;
  }

  .fc:hover .fc-avatar {
    transform: scale(1.08);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .fc-avatar-fallback {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    background: rgba(255, 255, 255, 0.08);
    border: 2px solid rgba(255, 255, 255, 0.06);
    font-size: 1.75rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Front panel — title + footer */
  .fc-front {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
    border-radius: 1rem;
    background: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    overflow: hidden;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
                background-color 0.3s ease;
    transform-style: preserve-3d;
    transform-origin: center bottom;
  }

  .fc:hover .fc-front {
    transform: rotateX(-25deg);
    background: rgba(30, 30, 30, 0.85);
  }

  .fc-front-title {
    padding: 1rem 1rem 0;
    min-height: 2.75rem;
  }

  .fc-front-title h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
    color: rgba(255, 255, 255, 0.7);
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .fc:hover .fc-front-title h3 {
    color: #fff;
  }

  .fc-front-footer {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    height: 48px;
    padding: 0 1rem;
  }

  .fc-front-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.04);
  }

  .fc-desc {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.4);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    min-width: 0;
    transition: color 0.3s ease;
  }

  .fc:hover .fc-desc {
    color: rgba(255, 255, 255, 0.6);
  }

  .fc-host {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.3);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .fc-tags {
    display: flex;
    gap: 0.375rem;
    flex: 1;
    min-width: 0;
    overflow: hidden;
  }

  .fc-tag {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.06);
    font-size: 0.6875rem;
    color: rgba(255, 255, 255, 0.5);
    white-space: nowrap;
  }

  /* org variant — subtle gold border */
  .fc--org .fc-back {
    border-color: rgba(249, 115, 22, 0.12);
  }
  .fc--org .fc-front {
    border-color: rgba(249, 115, 22, 0.08);
  }

  /* self variant — brighter border */
  .fc--self .fc-back {
    border-color: rgba(245, 245, 245, 0.12);
  }
  .fc--self .fc-front {
    border-color: rgba(245, 245, 245, 0.1);
  }

  /* ===== Mobile ===== */
  @media (max-width: 639px) {
    .friends-heading {
      font-size: 1.125rem;
    }

    .fc-back {
      height: 140px;
    }

    .fc-avatar {
      width: 64px;
      height: 64px;
    }

    .fc-avatar-fallback {
      width: 64px;
      height: 64px;
      font-size: 1.5rem;
    }

    .fc-front-title {
      padding: 0.75rem 0.75rem 0;
    }

    .fc-front-footer {
      padding: 0 0.75rem;
      height: 42px;
    }
  }

  /* ===== Reduced motion ===== */
  @media (prefers-reduced-motion: reduce) {
    .fc,
    .fc-back,
    .fc-front,
    .fc-avatar-area,
    .fc-avatar {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
